<h2> You Bookmarks </h2>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li class="bookmark" id="bookmark-<%= bookmark.id %>">
      <a href="<%= bookmark.url %>" target="_blank">
        <%= bookmark.title %>
      </a>
      <form action="/bookmarks/<%= bookmark.id %>" method="post">
        <input type='hidden' name='_method' value='DELETE'/>
        <input type="submit" value="Delete" />
      </form>
      <form action="/bookmarks/<%= bookmark.id %>/edit" method="get">
        <input type="submit" value="Edit" />
      </form>
      <form  action="/bookmarks/<%= bookmark.id %>/comments/new" method="get">
        <button type="submit" name="Add Comment">Add Comment</button>
      </form>
      <ul>
        <% bookmark.comments.each do |comment| %>
          <li> <%= comment.text %> </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
<p>
  <%= flash[:notice] %>
</p>

<h2> Add New Bookmark </h2>

<form action="/bookmarks" method="post" >
  <input type="text" name="url" placeholder="Enter your url here" required />
  <input type="text" name="title" placeholder="Enter title here" required />
  <input type="submit" value="Save" />
</form>
